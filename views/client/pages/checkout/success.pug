extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head("Place order successfully")
        .row 
            .col-12 
                h4(class="mb-2") User information
                table(class="table table-bordered")
                    tbody
                        tr
                            th Name
                            td #{order.user_info.fullname}
                        tr
                            th Email
                            td #{order.user_info.email}
                        tr
                            th Phone
                            td #{order.user_info.phone}
                        tr
                            th Address
                            td #{order.user_info.address}
        .row 
            .col-12 
                h4(class="mb-2") Order information
                table(class="table table-bordered")
                    thead
                        tr 
                            th No 
                            th Image 
                            th Name
                            th Price
                            th Quantity
                            th Total
                    tbody 
                        if(order.products.length > 0)
                            each product, index in order.products
                                tr
                                    td #{index + 1}
                                    td 
                                        img(src=product.productInfo.thumbnail, alt=product.productInfo.name, class="img-fluid" style="width: 50px")
                                    td #{product.productInfo.title}
                                    td #{product.newPrice}
                                    td #{product.quantity}
                                    td #{product.totalPrice}

                if(order.products.length > 0)
                    h3(class="text-right") Total: #{order.totalPrice}$

                else 
                    tr
                        td(colspan="6") No product in order
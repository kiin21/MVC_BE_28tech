extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .product-detail
        .container.my-5
            .row 
                .col-6
                    .inner-thumb 
                        img(src=product.thumbnail, alt=product.title)
                .col-6
                    h1(class='inner-title') #{product.title}

                    if(product.category)
                        div(class='inner-category') 
                            span Category: 
                            a(href=`/products/${product.category.slug}`) #{product.category.title}

                    if(product.price)
                        div(class='inner-old-price') Old rice: #{product.price}$

                    if(product.newPrice)
                        div(class='inner-new-price') New rice: #{product.newPrice}$

                    if(product.discountPercentage)
                        div(class='inner-discount') Discount: <span>#{product.discountPercentage}%</span>

                    if(product.stock)
                        div(class='inner-stock') Quantity: #{product.stock}

                    form(
                        action=`/cart/add/${product._id}`,
                        method='post'
                    )
                        input(
                            class='form-control mb-2',
                            type='number',
                            name='quantity',
                            value='1',
                            min='1',
                            max=product.stock
                        )
                        button(
                            type='submit',
                            class='btn btn-success btn-block'
                        ) Add to cart

            hr

            .container.my-5 
                .row 
                    .col-12 
                        +box-head('Description')
                        .inner-desc !{product.description}



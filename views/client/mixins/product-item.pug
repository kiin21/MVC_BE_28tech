mixin product-item(item)
    .col-4.mb-3 
        .product-item 
            .inner-image 
                img(src=item.thumbnail, alt=item.title)
                if(item.featured)
                    .inner-featured Featured
            .inner-content
                h3.inner-title 
                    a(href=`/products/${item.slug}`) #{item.title}
                .inner-price-new $#{item.price}
                .inner-price-old $#{item.newPrice}
                .inner-discount #{item.discountPercentage}% off
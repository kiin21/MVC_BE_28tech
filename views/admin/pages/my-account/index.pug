extends ../../layouts/default.pug

block main
    h1(class='mb-4') Personal Information

    if(user.avatar)
        img(src=user.avatar width="150px" class=mb-3)
    else 
        img(src="/admin/images/default-avatar.jpg" width="150px" class=mb-3)

    if(user.fullname)
        p Fullname: <b>#{user.fullname}</b>
    else
        p Fullname: Not set

    if (user.email)
        p Email: <b>#{user.email}</b>
    else
        p Email: Not set

    if (user.phone)
        p Phone: <b>#{user.phone}</b>
    else
        p Phone: Not set

    p 
        span Status 
        span 
            <b> #{user.status==='available' ? "Active" : "Inactive"}</b>

    if(role.title)
        p Role: <b>#{role.title}</b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class='btn btn-primary'
    ) Edit
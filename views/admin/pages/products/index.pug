extend ../../layouts/default.pug
include ../../mixins/filterBar
include ../../mixins/search
include ../../mixins/pagination
block main 
    h1 Product list 

    .card.mb-3
        .card-header Filter and search
        .card-body 
            .row 
                .col-6
                    +filterBar(filterBar)
                .col-6 
                    +search(keyword)

    .card.mb-3
        .card-header List
        .card-body 
            Form(
                method='POST'
                id='change-multi-form'
                action=`${prefixAdmin}/products/changes-multi-status?_method=PATCH`
            )
                .d-flex.align-items-start
                    .form-group 
                        select(name='status' class='form-select')
                            option(value='available') Available
                            option(value='unavailable') Unavailable
                    .form-group 
                        input(
                            type="text"
                            name="ids"
                            class="form-control"
                        )
                    button(
                        type='submit'
                        class='btn btn-primary'
                    ) Change status

            table.table.table.hover.table-sm 
                thead
                    tr
                        th 
                            input(
                                type='checkbox'
                                id='check-all'
                            )
                        th No
                        th Image
                        th Title
                        th Price
                        th Status 
                        th Action

                tbody
                    each product, index in products
                        tr 
                            td 
                                input(
                                    type='checkbox'
                                    class='check-item'
                                    value=product._id
                                )
                            td #{index+1}
                            td 
                                img(src=product.thumbnail alt=product.description width="100px" height="auto")

                            td #{product.title}
                            td #{product.price}$
                            td
                                if product.status === 'available'
                                    a(
                                        href='javascript:;'
                                        btn-change-status
                                        product-status=product.status
                                        product-id=product._id 
                                        class='badge bg-success'
                                    ) Available
                                else
                                    a(
                                        href='javascript:;'
                                        btn-change-status
                                        product-status=product.status
                                        product-id=product._id
                                        class='badge bg-danger'
                                    ) Unavailable
                            td
                                button(class='btn btn-warning btn-sm me-1') Edit
                                button(class='btn btn-danger btn-sm') Delete

    +pagination(paginationObj) 
    form( 
        method='POST'
        id='change-status-form'
        data-path=`${prefixAdmin}/products/change-status`
    )
    script(src='/admin/js/products.js')
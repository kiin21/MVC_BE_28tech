extend ../../layouts/default.pug

block main 
    h1 Product list 

    table.table.table.hover.table-sm 
        thead
            tr
                th No
                th Image
                th Title
                th Price
                th Status 
                th Action

        tbody
            each product, index in products
                tr 
                    td index+1
                    td 
                        img(src=product.thumbnail alt=product.description width="100px" height="auto")

                    td #{product.title}
                    td #{product.price}$
                    td
                        if product.status === 'out of stock'
                            a(href='#' class='badge bg-danger') out of stock 
                        else if product.status === 'low stock'
                            a(href='#' class='badge bg-warning') low stock 
                        else if product.status === 'in stock'
                            a(href='#' class='badge bg-success') in stock
                    td
                        button(class='btn btn-warning btn-sm me-1') Edit
                        button(class='btn btn-danger btn-sm') Delete
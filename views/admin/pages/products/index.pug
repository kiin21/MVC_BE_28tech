extend ../../layouts/default.pug

block main 
    h1 Product list 

    table.table.table.hover.table-sm 
        thead
            tr
                th No
                th Image
                th Title
                th Price
                th Status 
                th Action

        tbody
            tr 
                td 1
                td 
                    img(src='https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/1.png' alt='Product image' width="100px" height="auto")

                td Product 1
                td $100
                td 
                    a(href='#' class='badge bg-success') Active 
                td
                    button(class='btn btn-warning btn-sm me-1') Edit
                    button(class='btn btn-danger btn-sm') Delete
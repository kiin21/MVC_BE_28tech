extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{role.title}

    if(role.title)
        div(class='mb-4') Title: <b>#{role.title}</b>
    if(role.description)
        div(class='mb-4') Description: <b>!{role.description}</b>
        
    if(role.permissions)
        div(class='mb-4') Permissions: 
        ul
            each permission in role.permissions
                li= permission.title


extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{role.title}

    form(
        action=`${prefixAdmin}/roles/edit/${role._id}?_method=PATCH`
        method='POST'
    )

        div(class='form-group')
            label(for='name') Title
            input(
                type='text'
                class='form-control'
                id='title'
                name='title'
                value=role.title
                required
            )
        div(
            class='form-group'
        )
            label(for='description') Description
            textarea(
                class='form-control'
                id='description'
                name='description'
                rows="5"

            ) !{role.description}
        div(class='form-group')
            button(
                type='submit'
                class='btn btn-primary'
            ) Save
    

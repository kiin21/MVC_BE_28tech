extends ../../layouts/auth.pug
include ../../mixins/alertMessage.pug

block main 
    +alertMessage(5000)
    
    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Login
                form(
                    action=`${prefixAdmin}/auth/login`
                    method='POST'
                )
                    div(class='form-group')
                        label(for='email') <b>Email</b>
                        input(
                            type='text'
                            class='form-control'
                            id='email'
                            name='email'
                            required
                        )
                    div(class='form-group')
                        label(for='password') <b>Password</b>
                        input(
                            type='password'
                            class='form-control'
                            id='password'
                            name='password'
                            required
                        )
                    div(class='form-group text-center')
                        button(
                            type='submit'
                            class='btn btn-primary mt-3'
                        ) Login
extends ../../layouts/default.pug
include ../../mixins/alertMessage.pug
block main 
    h1(class='mb-4') Edit <b>#{category.title}</b>

    +alertMessage(5000)

    Form(
        action=`${prefixAdmin}/product-category/edit/${category._id}?_method=PATCH`
        id='form-edit-product'
        method='POST'
        enctype="multipart/form-data"
    )
        div(class='form-group')
            label(for='title') Title
            input(
                type='text'
                class='form-control'
                id='title'
                name='title'
                value=category.title
                required
            )
        div(class='form-group')
            label(for='parent_id') Parent category 
            select(
                name='parent_id'
                id='parent_id'
                class='form-control'
            )
                option(value='') Choose parent category
        div(class='form-group')
            label(for='describe') Description
            textarea(
                class='form-control'
                id='describe'
                name='description'
                rows="5"
                value=category.description
            ) !{category.description}
        div(
            class='form-group' 
            upload-image
        )
            label(for='thumbnail') Image
            input(
                type='file'
                class='form-control'
                id='thumbnail'
                name='thumbnail'
                accept='image/*'
                upload-image-input
            )
        div(image-preview-container)
            img(
                upload-image-preview,
                src=category.thumbnail
                alt='Image preview',
            ) 
            button(
                type='button',
                class='d-none',
                btn-close-preview-img
                aria-label='Close'
            )
                span

        div(class='form-group') 
            label(for='position') Position 
            input(
                type='number'
                class='form-control'
                id='position'
                name='position'
                placeholder='Auto increase'
                min=1
                value=category.position
            )
        div(class='form-group form-check form-check-inline')
            input(
                type='radio'
                class='form-check-input'
                id='statusAvailable'
                name='status'
                value='available'
                checked=category.status==='available'?true:false
            )
            label(for='statusAvailable' class='form-check-label') Available 
        div(class='form-group form-check form-check-inline')
            input(
                type='radio'
                class='form-check-input'
                id='statusUnavailable'
                name='status'
                value='unavailable'
                checked=category.status==='unavailable'?true:false
            )
            label(for='statusUnavailable' class='form-check-label') Unavailable     
        div(class='form-group')
            button(
                type='submit'
                class='btn btn-primary'
            ) + Update    
